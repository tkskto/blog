---
const {categories} = Astro.props;
---
<nav class="px-6">
    <ul class="p-0 m-0 flex flex-col gap-y-3">
        {categories.map((category) => {
            return (
                <li class="leading-relaxed text-xl">
                    <a class="text-neutral-900" href={`/blog/category/${category.name}/`}>{category.name}</a>
                </li>
            );
        })}
    </ul>
</nav>
